<?xml version="1.0"?>

<component name="org.nuxeo.ecm.platform.picture.ImagingComponent.default.config">
  <documentation>
    Defines configurations for imaging service
  </documentation>

  <extension target="org.nuxeo.ecm.platform.picture.ImagingComponent"
    point="configuration">

    <configuration>
      <parameters>
        <!-- global configuration variables -->
        <parameter name="conversionFormat">jpg</parameter>
      </parameters>
    </configuration>
  </extension>

  <extension target="org.nuxeo.ecm.platform.picture.ImagingComponent"
    point="pictureTemplates">

    <pictureTemplate title="Original" description="Original image"
      order="10" chainId="Blob.Nop" />

    <pictureTemplate title="OriginalJpeg" enabled="true"
      description="Original jpeg image" order="25" chainId="Picture.Resize" />

    <pictureTemplate title="Medium" description="Medium size"
      maxSize="550" order="5" chainId="Picture.Resize" />

    <pictureTemplate title="Small" description="Small size"
      maxSize="280" order="15" chainId="Picture.Resize" />

    <pictureTemplate title="Thumbnail" description="Thumbnail size"
      maxSize="100" order="20" chainId="Picture.Resize" />

  </extension>
</component>
