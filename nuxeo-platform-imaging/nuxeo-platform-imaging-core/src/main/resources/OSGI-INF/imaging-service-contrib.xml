<?xml version="1.0"?>

<component name="org.nuxeo.ecm.platform.picture.ImagingComponent.default.config">
  <documentation>
    Defines configurations for imaging service
  </documentation>

  <!-- Remove ? -->
  <extension target="org.nuxeo.ecm.platform.picture.ImagingComponent"
    point="configuration">

    <configuration>
      <parameters>
        <!-- global configuration variables -->
        <parameter name="conversionFormat">jpg</parameter>
      </parameters>
    </configuration>
  </extension>

  <extension target="org.nuxeo.ecm.platform.picture.ImagingComponent"
    point="pictureTemplates">

    <pictureTemplate title="Original" enabled="true"
      description="Original size" order="5" chainId="originalPictureResizeConverter" />

    <pictureTemplate title="OriginalJpeg" enabled="true"
      description="Original size" order="10" chainId="originalJpegPictureResizeConverter" />

    <pictureTemplate title="Medium" enabled="true" description="Medium size"
      maxSize="550" order="15" chainId="defaultPictureResizeConverter" />

    <pictureTemplate title="Small" enabled="true" description="Small size"
      maxSize="280" order="20" chainId="defaultPictureResizeConverter" />

    <pictureTemplate title="Thumbnail" enabled="true"
      description="Thumbnail size" maxSize="100" order="25" chainId="defaultPictureResizeConverter" />

  </extension>
</component>
