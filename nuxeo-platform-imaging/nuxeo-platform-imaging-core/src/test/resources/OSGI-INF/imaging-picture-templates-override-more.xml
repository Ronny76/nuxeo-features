<?xml version="1.0" encoding="UTF-8"?>
<component name="org.nuxeo.ecm.platform.picture.ImagingComponent.test.more.config">
  <documentation>
    Override pictureTemplates extension point
  </documentation>

  <extension target="org.nuxeo.ecm.platform.picture.ImagingComponent"
    point="pictureTemplates">

    <pictureTemplate title="ThumbnailMini" enabled="true" maxSize="96" order="0" />
    <pictureTemplate title="ThumbnailWide" enabled="true" maxSize="320" order="22" />
    <pictureTemplate title="Tiny" enabled="true" maxSize="48" order="2" />
    <pictureTemplate title="Wide" enabled="true" maxSize="2048" order="15" />

    <pictureTemplate title="Thumbnail" enabled="false" maxSize="160" order="11" />
    <pictureTemplate title="Original" enabled="false" maxSize="800" order="17" />
    <pictureTemplate title="OriginalJpeg" enabled="false"
      maxSize="0" order="7" />
  </extension>
</component>