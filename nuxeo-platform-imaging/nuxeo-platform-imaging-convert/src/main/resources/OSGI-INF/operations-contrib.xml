<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.picture.convert.operation">
  <documentation>
    Define the default operations for the imaging library
  </documentation>

  <extension target="org.nuxeo.ecm.core.operation.OperationServiceComponent"
    point="operations">
    <operation
      class="org.nuxeo.ecm.platform.picture.convert.operation.NopBlobOperation" />
    <operation
      class="org.nuxeo.ecm.platform.picture.convert.operation.ConverterOperation" />

    <operation class="org.nuxeo.ecm.platform.picture.convert.operation.PictureResize" />

    <operation class="org.nuxeo.ecm.platform.picture.convert.operation.CreatePicture" />

    <operation class="org.nuxeo.ecm.platform.picture.convert.operation.GetPictureView" />
  </extension>

  <extension point="chains"
    target="org.nuxeo.ecm.core.operation.OperationServiceComponent">

    <chain id="Image.Blob.Resize">
      <operation id="ConverterOperation">
        <param name="converter" type="string">pictureResize</param>
      </operation>
    </chain>
  </extension>
</component>
